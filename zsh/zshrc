## Directory Helpers ##########
function stash {
  rm -rf ~/.snatch-files/*
  cp -rf $@ ~/.snatch-files/.
}
function unstash {
  cp -rf ~/.snatch-files/* .
}
function snip {
  head -n$2 $3 | tail -n$(expr $2 - $1)
}
function sd {
  echo $PWD > ~/.stored-directory
  echo Stored $PWD
}
function rd {
  local dir=`cat ~/.stored-directory`
  echo Resumed $dir
  cd $dir
}
function kgrep {
  pgrep -f $@ | xargs kill
}

